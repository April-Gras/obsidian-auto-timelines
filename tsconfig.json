{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"],
			"@/*": ["./tests/*"]
		},
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"types": ["vitest/globals"]
	},
	"include": ["**/*.ts", "**/*.vue"]
}
